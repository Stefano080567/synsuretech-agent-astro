---
/**
 * Frontmatter (server-side logic)
 * This section runs safely in Astro's server runtime before rendering the page.
 */

// Beispiel-Daten / Demo-Content
const pageTitle = "WikiSure Semantic Engine â€“ Astro Demo";
const description = "Cloud-ready semantic governance interface powered by WikiSure.";
---

<!-- Page HTML starts here -->
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: system-ui, sans-serif;
        background: #f5f7fb;
        color: #1a1a1a;
      }
      .container {
        max-width: 900px;
        margin: 3rem auto;
        padding: 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.07);
      }
      h1 {
        font-size: 2.2rem;
        margin-bottom: 1rem;
      }
      p {
        font-size: 1.1rem;
        line-height: 1.5;
      }
      .button {
        display: inline-block;
        margin-top: 1.5rem;
        padding: 0.8rem 1.2rem;
        background: #004fc4;
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
      }
      .button:hover {
        background: #003a94;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>{pageTitle}</h1>
      <p>{description}</p>

      <p>
        This is a minimal Astro landing page.  
        Your WikiSure Semantic Engine UI and API endpoints are ready for deployment.
      </p>

      <a href="/demo" class="button">Open Demo</a>
    </div>
  </body>
</html>
