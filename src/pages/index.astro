---
/**
 * index.astro
 * Entry page for the WikiSure™ demo.
 * Build-safe, no Tailwind, no PostCSS triggers.
 */

import BaseLayout from "../layouts/Layout.astro";
import AgentFlowContainer from "../components/AgentFlowContainer.astro";

const pageTitle = "WikiSure™ Demo";
const pageDescription =
  "A guided demo showing how governed definitions enable trust, accountability and human-in-the-loop AI.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="page">
    <section class="hero">
      <h1>WikiSure™ Demo</h1>
      <p class="intro">
        This demo illustrates how shared definitions, explicit assumptions
        and human accountability enable trustworthy collaboration across
        platforms, insurers and regulators.
      </p>
    </section>

    <section class="flow">
      <AgentFlowContainer />
    </section>
  </main>
</BaseLayout>

<style>
  .page {
    max-width: 1100px;
    margin: 0 auto;
    padding: 80px 24px 120px;
  }

  .hero {
    margin-bottom: 64px;
  }

  h1 {
    font-size: 42px;
    line-height: 1.2;
    margin-bottom: 16px;
    letter-spacing: -0.02em;
  }

  .intro {
    font-size: 18px;
    line-height: 1.6;
    color: #4b5563;
    max-width: 720px;
  }

  .flow {
    margin-top: 48px;
  }

  @media (max-width: 768px) {
    .page {
      padding: 48px 16px 80px;
    }

    h1 {
      font-size: 32px;
    }
  }
</style>
