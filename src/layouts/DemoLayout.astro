---
import Layout from "./Layout.astro";
const { title, step } = Astro.props;
import ProgressDots from "../components/ProgressDots.astro";
---

<Layout title={title}>
  <div class="demo-wrap">
    <header class="demo-header">
      <div class="left">
        <span class="brand">WikiSure™</span>
        <span class="sep">·</span>
        <span class="mode">Demo</span>
      </div>

      <div class="right">
        <span class="pill">Single-Term</span>
        <span class="pill ghost">Read-only</span>
      </div>
    </header>

    <ProgressDots step={step} />

    <main class="demo-main">
      <slot />
    </main>
  </div>

  <style>
    .demo-wrap {
      max-width: 980px;
      margin: 0 auto;
      padding: 28px 18px 72px;
    }

    .demo-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 18px;
    }

    .left {
      display: flex;
      align-items: center;
      gap: 8px;
      color: #111827;
    }

    .brand {
      font-weight: 700;
      letter-spacing: -0.01em;
    }

    .sep {
      color: #9ca3af;
    }

    .mode {
      color: #6b7280;
      font-weight: 500;
    }

    .right {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .pill {
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid var(--border, #e5e7eb);
      background: #ffffff;
      color: #111827;
      line-height: 1;
      user-select: none;
    }

    .pill.ghost {
      background: #f9fafb;
      color: #374151;
    }

    .demo-main {
      margin-top: 18px;
    }
  </style>
</Layout>

