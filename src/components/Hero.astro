---
const { title = "WikiSure Semantic Engine", subtitle = "AI-assisted Semantic Governance", cta = "Demo starten", link = "/demo" } = Astro.props;
---

<style>
  .hero {
    padding: 4rem 2rem;
    text-align: center;
    background: linear-gradient(135deg, #f7faff 0%, #eef4ff 100%);
    border-radius: 12px;
    margin: 2rem 0;
  }

  h1 {
    font-size: 2.4rem;
    margin-bottom: 1rem;
    color: #1a2b4b;
  }

  p {
    font-size: 1.2rem;
    color: #44546a;
    margin-bottom: 2rem;
  }

  a.button {
    padding: 0.75rem 1.5rem;
    background: #004fc4;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-size: 1.1rem;
    transition: background 0.2s ease;
  }

  a.button:hover {
    background: #003a96;
  }
</style>

<div class="hero">
  <h1>{title}</h1>
  <p>{subtitle}</p>
  <a href={link} class="button">{cta}</a>
</div>
