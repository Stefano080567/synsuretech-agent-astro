const READ_ONLY = true;

const steps = [
  {
    title: "Why WikiSure™ Exists",
    body: `
      <h2>Why WikiSure™ Exists</h2>
      <p>
        Modern ecosystems move fast — but speed alone is not enough.
        Alignment, clarity and shared understanding determine whether
        partners can execute reliably across organizations.
      </p>
      <p>
        WikiSure™ exists to turn shared understanding into an explicit,
        reviewable and owned decision layer — with humans staying in
        the driver’s seat.
      </p>
    `
  },
  {
    title: "Demo Context",
    body: `
      <h2>Demo Context</h2>
      <p>
        This demo is intentionally focused and fixed:
      </p>
      <ul>
        <li>Country: Germany</li>
        <li>Use case: Embedded Insurance</li>
        <li>Perspective: Platform Provider</li>
      </ul>
      <p>
        One term. One decision. Fully traceable.
      </p>
    `
  },
  {
    title: "Term Selection",
    body: `
      <h2>Term Selection</h2>
      <p>
        Choose a term that multiple partners rely on — and often
        interpret differently.
      </p>
      <p>
        Example:
        <strong>Embedded Insurance Consent</strong>
      </p>
    `
  },
  {
    title: "Definition",
    body: `
      <h2>Definition</h2>

      <div class="definition-grid">
        <div class="definition-box">
          <h3>Baseline Definition</h3>
          <p>
            The current wording used across partners today.
            Often implicit, assumed, and inconsistently implemented.
          </p>
        </div>

        <div class="definition-box highlight">
          <h3>Proposed Definition</h3>
          <p>
            A clarified, implementation-ready definition that makes
            responsibilities, boundaries and intent explicit.
          </p>
        </div>
      </div>
    `
  },
  {
    title: "Validation",
    body: `
      <h2>Validation</h2>
      <p>
        Before execution, the definition is reviewed:
      </p>
      <ul>
        <li>Is it unambiguous?</li>
        <li>Does it shift responsibility?</li>
        <li>Does it introduce compliance risk?</li>
      </ul>
      <p>
        The system assists — but a human reviewer owns the outcome.
      </p>
    `
  },
  {
    title: "Decision",
    body: `
      <h2>Decision</h2>
      <p>
        A governed decision is more than “yes” or “no”.
      </p>
      <p>
        It captures:
      </p>
      <ul>
        <li>The outcome</li>
        <li>The rationale</li>
        <li>The next action</li>
      </ul>
      <p>
        This makes execution faster, safer and repeatable across partners.
      </p>
    `
  }
];
---

<section class="flow-shell">
  <div id="flow-content"></div>

  <div class="nav-bar">
    <button id="prevBtn">Back</button>
    <span id="stepCounter"></span>
    <button id="nextBtn">Next</button>
  </div>
</section>

<script>
  let currentStep = 0;

  const contentEl = document.getElementById("flow-content");
  const prevBtn = document.getElementById("prevBtn");
  const nextBtn = document.getElementById("nextBtn");
  const counterEl = document.getElementById("stepCounter");

  function renderStep() {
    const step = steps[currentStep];
    contentEl.innerHTML = step.body;
    counterEl.textContent = `${currentStep + 1} / ${steps.length}`;

    prevBtn.disabled = currentStep === 0;
    nextBtn.disabled = currentStep === steps.length - 1;
  }

  prevBtn.addEventListener("click", () => {
    if (READ_ONLY && currentStep > 0) {
      currentStep--;
      renderStep();
    }
  });

  nextBtn.addEventListener("click", () => {
    if (READ_ONLY && currentStep < steps.length - 1) {
      currentStep++;
      renderStep();
    }
  });

  renderStep();
</script>

<style>
  :root {
    --brand-blue: #0a5cff;
  }

  .flow-shell {
    max-width: 820px;
    margin: 80px auto;
    padding: 0 24px;
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text",
      "Helvetica Neue", Arial, sans-serif;
    color: #111;
  }

  h2 {
    font-size: 32px;
    margin-bottom: 16px;
  }

  h3 {
    font-size: 18px;
    margin-bottom: 8px;
  }

  p, li {
    font-size: 18px;
    line-height: 1.6;
  }

  ul {
    margin-left: 20px;
  }

  .definition-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    margin-top: 24px;
  }

  .definition-box {
    border: 1px solid #e5e5e5;
    border-radius: 14px;
    padding: 20px;
    background: #fafafa;
  }

  .definition-box.highlight {
    border-color: var(--brand-blue);
    background: #f4f8ff;
  }

  .nav-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 48px;
  }

  button {
    font-size: 16px;
    padding: 10px 18px;
    border-radius: 10px;
    border: 1px solid #ccc;
    background: white;
    cursor: pointer;
  }

  button:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  #stepCounter {
    font-size: 14px;
    color: #666;
  }

  @media (min-width: 700px) {
    .definition-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
