---
/*
  ⚠️ DEMO-FROZEN FILE
  This file is intentionally isolated.
  DO NOT auto-generate, refactor, or replace.
*/

const READ_ONLY = true;

const steps = [
  {
    title: "Why WikiSure™ Exists",
    body: `
      <h2>Why WikiSure™ Exists</h2>
      <p>
        Modern ecosystems move fast — but alignment is what makes speed usable.
        Shared understanding allows partners to execute with confidence.
      </p>
      <p>
        WikiSure™ turns clarity into action — with humans staying in the driver’s seat.
      </p>
    `
  },
  {
    title: "Context",
    body: `
      <h2>Demo Context</h2>
      <p>
        This demo shows a single, governed decision in an embedded insurance setting.
        The context is intentionally fixed to keep the story clear.
      </p>
    `
  },
  {
    title: "Term",
    body: `
      <h2>Select a Term</h2>
      <p>
        Choose a term that multiple partners use — and often interpret differently.
      </p>
    `
  },
  {
    title: "Definition",
    body: `
      <h2>Definition</h2>
      <p>
        Clear definitions enable teams to implement the same behavior
        — not just agree on words.
      </p>
    `
  },
  {
    title: "Validation",
    body: `
      <h2>Validation</h2>
      <p>
        The system assists, but a human confirms clarity, responsibility and risk.
      </p>
    `
  },
  {
    title: "Decision",
    body: `
      <h2>Decision</h2>
      <p>
        Decisions are documented with reasoning — so execution becomes repeatable.
      </p>
    `
  }
];

let currentStep = 0;

function next() {
  if (READ_ONLY) return;
  if (currentStep < steps.length - 1) currentStep++;
}

function prev() {
  if (READ_ONLY) return;
  if (currentStep > 0) currentStep--;
}
---

<section class="flow">
  <div class="card">
    <div class="content" set:html={steps[currentStep].body} />
  </div>

  <div class="nav">
    <button disabled={READ_ONLY || currentStep === 0} onClick={prev}>Back</button>
    <span>{currentStep + 1} / {steps.length}</span>
    <button disabled={READ_ONLY || currentStep === steps.length - 1} onClick={next}>Next</button>
  </div>
</section>

<style>
  :root {
    --brand-blue: #0b5cff;
  }

  .flow {
    max-width: 760px;
    margin: 4rem auto;
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text",
      "Helvetica Neue", Arial, sans-serif;
  }

  .card {
    padding: 2.5rem;
    border-radius: 18px;
    background: #fff;
    box-shadow: 0 20px 40px rgba(0,0,0,.06);
  }

  h2 {
    font-size: 1.6rem;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1.05rem;
    line-height: 1.6;
    color: #333;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    color: #666;
  }

  button {
    padding: .6rem 1.2rem;
    border-radius: 999px;
    border: 1px solid var(--brand-blue);
    background: white;
    color: var(--brand-blue);
    font-weight: 500;
    cursor: pointer;
  }

  button[disabled] {
    opacity: .4;
    cursor: not-allowed;
  }
</style>
