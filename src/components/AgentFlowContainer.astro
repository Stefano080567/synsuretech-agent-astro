---
/*
  ⚠️ DEMO-FROZEN FILE
  This file is intentionally isolated.
  DO NOT auto-generate, refactor, or replace.
*/

export const DEMO_FROZEN = true;

// ---- DEMO STATE (LOCAL ONLY, NO EXTERNAL DEPENDENCIES) ----
let currentStep = 0;

// ---- DEMO CONTENT (NO EMPTY STEPS ALLOWED) ----
const steps = [
  {
    title: "Why WikiSure™ Exists",
    body: `
      <h2>Why WikiSure™ Exists</h2>
      <p>
        Modern ecosystems move fast — but speed alone is not enough.
        Alignment, clarity and shared understanding determine whether
        partners can execute reliably across organizations.
      </p>
      <p>
        WikiSure™ makes meaning explicit.
        AI can assist — humans stay in the driver’s seat.
      </p>
    `
  },
  {
    title: "Demo Context",
    body: `
      <h2>Demo Context</h2>
      <p>
        This demo illustrates a governed definition flow across partners.
        It shows how shared understanding can be made explicit,
        reviewed, and confirmed — step by step.
      </p>
    `
  },
  {
    title: "Term Selection",
    body: `
      <h2>Term Selection</h2>
      <p>
        A single term can mean different things to different partners.
        The demo starts by selecting one shared term
        that requires alignment.
      </p>
    `
  },
  {
    title: "Definition",
    body: `
      <h2>Definition</h2>
      <div class="definition-grid">
        <div class="definition-box">
          <h3>Current Definition</h3>
          <p>
            Consent is collected during onboarding and stored
            by the platform provider.
          </p>
        </div>
        <div class="definition-box highlight">
          <h3>Proposed Definition</h3>
          <p>
            Consent is explicitly requested at activation,
            timestamped, scoped, and shared with all parties.
          </p>
        </div>
      </div>
    `
  },
  {
    title: "Validation",
    body: `
      <h2>Validation</h2>
      <p>
        Stakeholders review the proposed definition.
        Differences are visible, discussable,
        and resolved before execution.
      </p>
    `
  },
  {
    title: "Decision",
    body: `
      <h2>Decision</h2>
      <p>
        The final definition is confirmed.
        Accountability is explicit.
        Execution can proceed with confidence.
      </p>
    `
  }
];

// ---- HARD SAFETY GUARD ----
const safeStep = steps[currentStep];
if (!safeStep || !safeStep.body) {
  throw new Error("DEMO BROKEN: step content missing");
}
---

<style>
  :root {
    --synsuretech-blue: #2563eb;
    --text-primary: #0f172a;
    --bg-soft: #f8fafc;
    --card-bg: #ffffff;
    --border-soft: #e5e7eb;
  }

  .container {
    max-width: 880px;
    margin: 80px auto;
    padding: 40px;
    background: var(--card-bg);
    border-radius: 18px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.06);
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Inter", sans-serif;
    color: var(--text-primary);
  }

  h2 {
    font-size: 28px;
    margin-bottom: 16px;
  }

  p {
    font-size: 18px;
    line-height: 1.6;
  }

  .definition-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
    margin-top: 24px;
  }

  .definition-box {
    padding: 24px;
    border-radius: 14px;
    background: var(--bg-soft);
    border: 1px solid var(--border-soft);
  }

  .definition-box.highlight {
    border-color: var(--synsuretech-blue);
  }

  .nav {
    display: flex;
    justify-content: space-between;
    margin-top: 48px;
  }

  button {
    padding: 12px 24px;
    border-radius: 999px;
    font-size: 16px;
    border: none;
    cursor: pointer;
  }

  button.primary {
    background: var(--synsuretech-blue);
    color: white;
  }

  button.secondary {
    background: #e5e7eb;
    color: #475569;
  }

  button:disabled {
    opacity: 0.4;
    cursor: default;
  }

  .exit {
    margin-top: 32px;
    text-align: center;
  }

  .exit a {
    color: var(--synsuretech-blue);
    text-decoration: none;
    font-size: 14px;
  }
</style>

<div class="container">
  <div set:html={safeStep.body}></div>

  <div class="nav">
    <button
      class="secondary"
      disabled={currentStep === 0}
      on:click={() => currentStep--}
    >
      Back
    </button>

    <button
      class="primary"
      disabled={currentStep === steps.length - 1}
      on:click={() => currentStep++}
    >
      Next
    </button>
  </div>

  <div class="exit">
    <a href="https://synsuretech.org" target="_blank" rel="noopener">
      ← Back to SynsureTech.org
    </a>
  </div>
</div>
